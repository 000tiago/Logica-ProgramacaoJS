{
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": true,
    // Configura os esquemas JSON para validação automática
    "json.schemas": [
        // Adicione esquemas aqui, por exemplo:
        // { "fileMatch": ["*.json"], "url": "https://json.schemastore.org/schema-name" }
    ],
    // Define o caractere de quebra de linha como '\n' (padrão do Unix/Linux)
    "files.eol": "\n",
    // Define a indentação padrão para 4 espaços, mas com uso de tabs
    "editor.tabSize": 4,
    "editor.insertSpaces": false,  // Usar tabs ao invés de espaços
    // Habilita formatação automática ao salvar arquivos JSON
    "editor.formatOnSave": false,
    // Define o formatador padrão como Prettier
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    // Ativa sugestões automáticas para arquivos JSON
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    // Certifique-se de que o Prettier use tabs
    "prettier.useTabs": true,
    // Define o tamanho do tab para 4 espaços
    "prettier.tabWidth": 4,
    // Ajuste o tamanho do tab para ficar maior, se necessário
    "editor.tabSize": 4,  // Aumenta o tamanho da tabulação
    "editor.detectIndentation": false,  // Impede que o VS Code mude a configuração com base no arquivo
	"editor.formatOnSave": true, //Salvar sem ';'
		"[typescript]": {
			"editor.defaultFormatter": "esbenp.prettier-vscode"
			"editor.formatOnSave": true, // Formatar automaticamente ao salvar
			"editor.tabSize": 4,        // Tamanho da indentação (4 espaços, pode ajustar para 2 se preferir)
			"editor.insertSpaces": true, // Usar espaços ao invés de tabulação
			"[typescript]": {
				"editor.defaultFormatter": "esbenp.prettier-vscode" // Usar o Prettier para formatação
			}
}
